<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ShadowConstraintLayout">
        <attr name="shadow_top_offset" format="dimension" />
        <attr name="shadow_bottom_offset" format="dimension" />
        <attr name="shadow_start_offset" format="dimension" />
        <attr name="shadow_end_offset" format="dimension" />
        <attr name="shadow_color" format="color" />
        <attr name="shadow_stroke_width" format="dimension" />
        <attr name="corner_radius" format="dimension" />
        <attr name="blur_radius" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="card_background_color" format="color"/>
        <attr name="enable_shadow_top" format="boolean" />
        <attr name="enable_shadow_bottom" format="boolean" />
        <attr name="enable_shadow_start" format="boolean" />
        <attr name="enable_shadow_end" format="boolean" />
        <attr name="enable_shadow" format="boolean" />
        <attr name="enable_border" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CustomizableSpinner">
        <attr name="selected_text_size" format="dimension" />
        <attr name="selected_text_color" format="color" />
        <attr name="selected_background_color" format="color" />
        <attr name="selected_max_lines" format="integer" />
        <attr name="selected_height" format="dimension" />
        <attr name="selected_padding" format="dimension" />
        <attr name="selected_text_font" format="reference" />

        <attr name="drop_down_text_size" format="dimension" />
        <attr name="drop_down_text_color" format="color" />
        <attr name="drop_down_background_color" format="color" />
        <attr name="drop_down_max_lines" format="integer" />
        <attr name="drop_down_height" format="dimension" />
        <attr name="drop_down_padding" format="dimension" />
        <attr name="drop_down_text_font" format="reference" />

    </declare-styleable>
</resources>